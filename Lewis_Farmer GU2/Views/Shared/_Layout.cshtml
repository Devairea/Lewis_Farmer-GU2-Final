</head>
<body>
    <!--  Navigation Start  -->
    <header class="main_menu">
        <section>
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-12">
                        <nav class="navbar navbar-expand-lg navbar-light">
                            <a class="navbar-brand" href="@Url.Action("Index", "Home")"> <img src="~/Images/DonaldsonLogo.PNG" alt="logo"> </a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse"
                                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse main-menu-item justify-content-end"
                                 id="navbarSupportedContent">
                                <ul class="navbar-nav">
                                    @if (User.IsInRole("Customer") || User.IsInRole("Admin"))
                                    {
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" href="@Url.Action("Index", "Bookings")" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                Manage Bookings
                                            </a>
                                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                                @if (User.IsInRole("Customer"))
                                                {<a class="dropdown-item" href="@Url.Action("Create", "Bookings")">Create Booking</a>}
                                                @if (User.IsInRole("Customer"))
                                                {<a class="dropdown-item" href="@Url.Action("CustomerBooking", "Bookings")">Manage Current Booking</a>}
                                                @if (User.IsInRole("Customer"))
                                                {<a class="dropdown-item" href="@Url.Action("Index", "Bookings")">Bookings History</a>}
                                                @if (User.IsInRole("Admin"))
                                                {<a class="dropdown-item" href="@Url.Action("Index", "Bookings")">View All Bookings</a>}
                                            </div>
                                        </li>
                                    }
                                    @if (User.IsInRole("Customer"))
                                    {
                                        <li class="nav-item">
                                            @Html.ActionLink("Configure Vehicle", "Create", "Vehicles", null, new { @class = "nav-link" })
                                        </li>
                                    }
                                    @if (User.IsInRole("Mechanic"))
                                    {
                                        <li class="nav-item">
                                            @Html.ActionLink("View Assigned Job", "Details", "Jobs", null, new { @class = "nav-link" })
                                        </li>
                                    }
                                    @if (User.IsInRole("Manager"))
                                    {
                                        <li class="nav-item">
                                            @Html.ActionLink("View Unassigned Jobs", "Index", "Jobs", null, new { @class = "nav-link" })
                                        </li>
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" href="" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                Manage Other
                                            </a>
                                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                                <a class="dropdown-item" href="@Url.Action("Index", "Suppliers")">Manage Suppliers</a>
                                                <a class="dropdown-item" href="@Url.Action("Index", "Parts")">Manage Parts</a>
                                                <a class="dropdown-item" href="@Url.Action("Index", "Users", new { RoleCriteria = "Customer"})">Manage Customers</a>
                                                <a class="dropdown-item" href="@Url.Action("Index", "Users", new { RoleCriteria = "Staff"})">Manage Staff</a>
                                                <a class="dropdown-item" href="@Url.Action("Index", "Users")">Manage All Users</a>
                                            </div>
                                        </li>
                                    }
                                    <li class="nav-item">
                                        @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
                                    </li>
                                </ul>
                                @Html.Partial("_LoginPartial")
                            </div>
                        </nav>

                    </div>
                </div>
                @*@RenderBody()*@
            </div>
        </section>
    </header>

    <div>
        @RenderBody()
    </div>


