@model Lewis_Farmer_GU2.ViewModels.BookingReasonPartialViewModel

@if (Model != null)
{
<section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="single_work">
                    <div class="row align-items-center">
                        <div class="offset-lg-1 col-lg-4 col-md-6">
                            <div class="single_work_demo">
                                <h3>Booking Type: @Model.BookingReason</h3>
